{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false,
    "componentHandler": false // material-design-lite global :(
  },
  "rules": {
    "key-spacing": 0,
    "quotes": [2, "double"],
    "jsx-quotes": [2, "double"],
    "max-len": [2, 120, 2],
    "object-curly-spacing": [2, "always"],
    "semi": [2, "always"]
  }
}
