mysql -u root -p << 'SQL'

CREATE DATABASE IF NOT EXISTS geo_service;

USE geo_service;

CREATE TABLE `suppliers`(
	`id` INT NOT NULL AUTO_INCREMENT,PRIMARY KEY (id),
	`industry_id` INT(11) NOT NULL,
	`supplier_name` varchar(45) NOT NULL,
	`supplier_description` TINYTEXT NOT NULL,
	`supplier_url` VARCHAR(512) NOT NULL,
	`supplier_email` VARCHAR(255) NOT NULL,
	`supplier_logo` VARCHAR(255) NOT NULL,
	INDEX `idx_industry_id` (`industry_id`),
	INDEX `idx_supplier_name` (`supplier_name`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 COLLATE=utf8_bin;

CREATE TABLE `locations`(
	`id` INT NOT NULL AUTO_INCREMENT,PRIMARY KEY (id),
	`ip_from` INT(10) UNSIGNED,
	`ip_to` INT(10) UNSIGNED,
	`supplier_id` INT(11) NOT NULL,
	`country_code` CHAR(2),
	`country_name` VARCHAR(64),
	`region_name` VARCHAR(128),
	`city_name` VARCHAR(128),
	`latitude` DOUBLE,
	`longitude` DOUBLE,
	`zip_code` VARCHAR(30),
	`time_zone` VARCHAR(8),
	INDEX `idx_ip_from` (`ip_from`),
	INDEX `idx_ip_to` (`ip_to`),
	INDEX `idx_ip_from_to` (`ip_from`, `ip_to`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 COLLATE=utf8_bin;

ALTER TABLE locations ADD FOREIGN KEY (supplier_id) REFERENCES suppliers(id);

SQL